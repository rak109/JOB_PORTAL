@model JOB_PORTAL.Models.Job

@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f0f2f5;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-box {
        background-color: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        border-radius: 8px;
    }
</style>

<div class="container login-container">
    <div class="login-box">
        <h3 class="text-center mb-4">Add Job</h3>

        <form asp-action="AddJob" asp-controller="Employer" method="post" class="d-flex flex-column justify-content-between">
          
                <div>
                   
                    <div class="mb-3">
                        <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" name="Title" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="2" name="Description" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PostingDate"></label>
                    <input asp-for="PostingDate" type="date" class="form-control" name="Posting_Date" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastDate"></label>
                    <input asp-for="LastDate" type="date" class="form-control" name="Last_Date" required />
                    </div>
                </div>
                <div>
                    <div class="mb-3">
                        <label asp-for="Location"></label>
                    <input asp-for="Location" class="form-control" name="Location" required />
                    </div>
                <div class="mb-3">
                    <label asp-for="JobType"></label>
                    <select asp-for="JobType" class="form-control">
                        <option value="">-- Select Job Type --</option>
                        <option value="FullTime">fulltime</option>
                        <option value="PartTime">parttime</option>
                    </select>
                </div>

                


                    @* <div class="mb-3"> *@
                    @*     <label asp-for="SkillId"></label> *@
                    @* <input asp-for="SkillId" class="form-control" name="Skill_ID" required /> *@
                    @* </div> *@
                    <div class="mb-3">
                        <label asp-for="Domain"></label>
                    <input asp-for="Domain" class="form-control" name="Domain" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Salary"></label>
                    <input asp-for="Salary" type="number" step="0.01" class="form-control" name="Salary" required />
                    </div>
                    <div class="mb-3">
                        <label asp-for="ExperienceLevel"></label>
                    <input asp-for="ExperienceLevel" class="form-control" name="Experience_Level" required />
                    </div>
                    
                 </div>
            
            <div class="d-grid">
                <input type="submit" class="btn btn-primary" value="Add Job" />
            </div>
        </form>
    </div>
</div>
											