<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - JOB_PORTAL</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">


    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JOB_PORTAL.styles.css" asp-append-version="true" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
        }

        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
        }

        .nav-link {
            font-weight: 500;
        }

        .container {
            margin-top: 20px;
        }

        nav.navbar {
            border: 1px solid black;
            border-radius: 12px;
            margin: 10px 20px;
            background-color: #f8f9fa;
            padding: 10px 20px;
        }

        .search-bar {
            width: 300px;
            border-radius: 20px;
            border: 1px solid #ccc;
            padding: 5px 15px;
            font-size: 0.9rem;
            outline: none;
        }

        .navbar-nav .nav-link {
            margin-right: 10px;
        }

        .sidebar {
            height: 100vh;
            width: 220px;
            background-color: #f0f0f0;
            padding-top: 20px;
            position: fixed;
            top: 0;
            left: 0;
        }

            .sidebar button {
                display: block;
                width: 180px;
                margin: 10px auto;
                padding: 10px;
                border: 2px solid #007BFF; /* Blue border */
                background-color: white;
                color: black;
                cursor: pointer;
                font-size: 16px;
                border-radius: 5px;
                transition: background-color 0.3s ease;
            }

                .sidebar button:hover {
                    background-color: #e6f0ff; /* Light blue hover */
                }

                .sidebar button i {
                    margin-right: 8px;
                }

        /* Add some padding to content to avoid overlap */
        .main-content {
            margin-left: 240px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <header>
        <div class="d-flex flex-column ">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm fixed-top" style="margin-left:240px">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">CAREER-SOLUTION</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Index">Jobs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Company" asp-action="Index">Company</a>
                        </li>
                    </ul>

                    <form class="d-flex mx-auto">
                        <input type="search" class="form-control search-bar" placeholder="Search jobs, companies..." />
                    </form>
                </div>
            </div>
        </nav>
            <div class="sidebar">
                <form method="get" asp-controller="JobSeeker" asp-action="MyJobs">
                    <button type="submit"><i class="fa-solid fa-user-plus"></i>My Jobs</button>
                </form>

                <form method="get" asp-controller="JobSeeker" asp-action="Profile">
                    <button type="submit"><i class="fa-solid fa-users"></i>Profile</button>
                </form>

                <form method="get" asp-controller="JobSeeker" asp-action="Resume">
                    <button type="submit"><i class="fa-solid fa-briefcase"></i>Resume</button>
                </form>

                <form method="post" asp-controller="JobSeeker" asp-action="Logout">
                    <button type="submit"><i class="fa-solid fa-right-from-bracket"></i> Logout</button>
                </form> 
            </div>
        </div>
    </header>

    <div class="container" style="margin-top: 100px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
