@{
    ViewData["Title"] = "Login";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f0f2f5;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-box {
        background-color: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        border-radius: 8px;
    }

    .login-links a {
        font-size: 0.9rem;
        text-decoration: none;
        color: #007bff;
    }

        .login-links a:hover {
            text-decoration: underline;
        }

    label {
        font-weight: 500;
    }
</style>

