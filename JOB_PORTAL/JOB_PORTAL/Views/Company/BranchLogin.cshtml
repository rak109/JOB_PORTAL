

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f0f2f5;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-box {
        background-color: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-primary {
        border-radius: 8px;
    }

    .login-links a {
        font-size: 0.9rem;
        text-decoration: none;
        color: #007bff;
    }

        .login-links a:hover {
            text-decoration: underline;
        }

    label {
        font-weight: 500;
    }
</style>

<div class="container login-container">
    <div class="login-box">
        <h3 class="text-center mb-4">Login</h3>

        <form asp-controller="Company" asp-action="BranchLogin" method="post">
            <div class="mb-3">
                <label for="Branch_ID">BranchID</label>
                <input type="number" class="form-control" id="BranchID" name="Branch_ID" required />
               
            </div>

            <div class="mb-3">
                <label for="Password">Password</label>
                <input type="password" class="form-control" id="password" name="Password" required />
                
            </div>

            <div class="mb-3">
                <label for="captcha">Enter Captcha</label>
                <input type="text" class="form-control" id="captcha" name="Captcha" required />
                
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>

            <div class="mt-3 d-flex justify-content-between login-links">
                <a asp-controller="Company" asp-action="ForgotPassword">Forgot password?</a>
                <a asp-controller="Company" asp-action="ResetPassword">Reset password</a>
            </div>
        </form>
       

    </div>
</div>


@if (ViewBag.Error != null)
 { 
     <h1> <div class="text-danger">@ViewBag.Error</div> </h1> 

 }




