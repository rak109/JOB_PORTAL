@model JOB_PORTAL.CompanyLoginViewModel

<h2>Company Login</h2>

<form asp-action="LoginCompany" method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-3">
        <label asp-for="EmailId"></label>
        <input asp-for="EmailId" class="form-control" />
        <span asp-validation-for="EmailId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>

<div class="mt-3">
    <p>Not registered? <a asp-action="RegisterCompany" asp-controller="Company">Register here</a></p>
    <p><a asp-action="ForgotPasswordCompany" asp-controller="Company">Forgot Password?</a></p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
