@model List<JOB_PORTAL.Models.Branch >
@{
    ViewData["Title"] = "DisplayBranch";
    Layout = "~/Views/Shared/Company_Layout.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background: #f0f2f5;
    }

    .branch-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding-top: 40px;
    }

    .branch-card {
        background-color: white;
        padding: 40px;
        border-radius: 16px;
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 700px; /* Increased width */
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: flex-start;
    }

        .branch-card h4 {
            font-weight: 1000;
            margin-bottom: 20px;
            color: #333;
            text-align: center;
            width: 100%;
        }

    .branch-details {
        flex: 1;
    }

        .branch-details p {
            font-size: 1rem;
            margin-bottom: 10px;
            color: #555;
        }

        .branch-details strong {
            color: #000;
        }

    .branch-actions {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-left: 32px;
        align-items: flex-end;
    }

        .branch-actions .btn {
            width: 100px;
        }
</style>

@foreach (var item in Model)
{
    <div class="container branch-container">
        <div class="branch-card">
            <div class="branch-details">
                <h4 class="justify-content-center">Branch Details</h4>
                <p><strong>Branch ID:</strong> @item.BranchId</p>
                <p><strong>Company ID:</strong> @item.CompanyId</p>
                <p><strong>Branch Name:</strong> @item.BranchName</p>
                <p><strong>Location:</strong> @item.Location</p>
            </div>
            <div class="branch-actions">
                <a asp-action="EditBranch" asp-route-id="@item.BranchId" class="btn btn-primary mt-5">Edit</a>
                <form asp-action="DeleteBranch" asp-route-id="@item.BranchId" method="post" style="margin:0;">
                    <button type="submit" class="btn btn-danger mt-2" onclick="return confirm('Are you sure you want to delete this branch?');">Delete</button>
                </form>
            </div>
        </div>
    </div>
}
